  "version": "0.2.0",
  "description": "API that powers mentavisor user service",
  "license": "MIT",
  "private": true,
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:dev": "cross-env NODE_ENV=development nodemon",
